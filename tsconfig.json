{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
          "dom",
          "es2015"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "paths": {
            "src/*": ["src/*"]
        },
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
